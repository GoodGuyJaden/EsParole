<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ButtonBar?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>


<BorderPane prefHeight="276.0" prefWidth="249.0" xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/10.0.1" fx:controller="gui.ParoleController">
   <center>
      <ListView fx:id="ListView" prefHeight="200.0" prefWidth="200.0" BorderPane.alignment="CENTER" />
   </center>
   <top>
      <HBox BorderPane.alignment="CENTER">
         <children>
            <TextField fx:id="txtInput" prefHeight="25.0" prefWidth="194.0" />
            <Button fx:id="btnInput" mnemonicParsing="false" onAction="#insert" prefHeight="25.0" prefWidth="59.0" text="Inserisci" />
         </children>
      </HBox>
   </top>
   <bottom>
      <ButtonBar buttonMinWidth="110.0" BorderPane.alignment="CENTER">
        <buttons>
            <Button fx:id="btnDelete" mnemonicParsing="false" onAction="#delete" text="Cancella" />
            <Button fx:id="btnClear" mnemonicParsing="false" onAction="#clear" text="Svuota" />
        </buttons>
      </ButtonBar>
   </bottom>
</BorderPane>
